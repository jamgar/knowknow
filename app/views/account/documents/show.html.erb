<div class="m-4">
  <%= link_to "← Back to Documents", account_documents_path, class: "btn" %>
</div>
<div id="<%= dom_id @document %>">
  <article class="prose max-w-4xl mx-auto px-4">
   <h1 class="">
    <%= @document.title %>
   </h1> 
   <div class="text-sm">
     <p>Updated: <%= @document.updated_at.strftime("%m/%d/%Y") %></p>
   </div>
   <div class="badge font-bold <%= @document.published? ? 'badge-info' : 'badge-warning' %>">
     <%= @document.published? ? "PUBLISHED" : "DRAFT" %>
   </div>
  <% if @document.internal %>
    <div class="badge badge-error font-bold">
      Internal Only 
    </div>
  <% end %>
   <section>
      <%= @document.content %>
    </section>
  </article>
</div>


